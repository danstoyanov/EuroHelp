@model EditDamageViewModel

@{
    ViewData["Title"] = "Damage Modification";
}

<h2 style="margin: 2%; text-align: center;">✍ Details</h2>
<hr class="bg-primary w-100">

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#home">Основни данни</a>
    </li>
</ul>

<div class="tab-content">
    <div class="tab-pane container active" id="home">
        <form method="post" class="row g-3">
            <div class="col-12">
                <label asp-for="@Model.Name" class="form-label">Тип щета</label>
                <input asp-for="@Model.Name" class="form-control">
            </div>
            <div class="col-12">
                <label asp-for="@Model.CompanyName" class="form-label">Застрахователна компания</label>
                <input class="form-control" type="text" placeholder="@Model.CompanyName" aria-label="Disabled input example" disabled>
            </div>
            <div class="col-12">
                <label asp-for="@Model.EventType" class="form-label">Вид събитие</label>
                <select asp-for="@Model.EventType" class="form-select">
                    <option>Събитие в чужбина - Каско регрес на Евроинс</option>
                    <option>Събитие в България - Каско регрес на Евроинс</option>
                    <option>Събитие в България - Каско регрес на Български застраховател</option>
                    <option>Събитие в чужбина - Каско регрес на Български застраховател</option>
                    <option>ПТП в България - Каско регрес на чужд застраховател</option>
                    <option>ПТП в чужбина – Каско регрес на чужд застраховател</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="@Model.EventDate" class="form-label">Дата на събитие</label>
                <input asp-for="@Model.EventDate" type="date" class="form-control">
            </div>
            <div class="col-2">
                <label asp-for="@Model.RegistrationDate" class="form-label">Дата на регистрация</label>
                <input class="form-control" type="text" placeholder="@Model.RegistrationDate" aria-label="Disabled input example" disabled>
            </div>
            <div class="col-3">
                <label asp-for="@Model.BulgarianRegNumber" class="form-label">Български регистрационен номер</label>
                <input asp-for="@Model.BulgarianRegNumber" class="form-control">
            </div>
            <div class="col-3">
                <label asp-for="@Model.ForeignRegNumber" class="form-label">Чужд регистрационен номер</label>
                <input asp-for="@Model.ForeignRegNumber" class="form-control">
            </div>
            <div class="col-2">
                <label asp-for="@Model.Property" class="form-label">Имущество</label>
                <input asp-for="@Model.Property" class="form-control">
            </div>
            <div class="col-2">
                <label asp-for="@Model.InjuredPerson" class="form-label">Пострадал</label>
                <select asp-for="@Model.InjuredPerson" class="form-select">
                    <option>Водач</option>
                    <option>Пътник</option>
                    <option>Мотоциклетист</option>
                    <option>Велосипедист</option>
                    <option>Пешеходец</option>
                </select>
            </div>
            <div></div>
                <div class="col-4">
                    <button asp-controller="Damages" asp-action="Details" type="submit" class="btn btn-primary">Запис</button>
                    <a asp-controller="Damages" asp-action="AllDamages" class="btn btn-secondary">Отказ</a>
                </div>
        </form>
    </div>
</div>