@model RegisterDamageFormModel

@{
    ViewData["Title"] = "Register Demage";
}

<form class="row g-3" method="post">
    <h1 style="margin: 2%; text-align: center;">Регистрация на нова щета</h1>
    <hr class="bg-primary w-100">
    <div class="col-12">
        <label asp-for="Name" class="form-label">Тип щета</label>
        <input asp-for="Name" class="form-control" placeholder="Тип щета...">
    </div>
    <div class="col-12">
        <label asp-for="CompanyName" class="form-label">Застрахователна компания</label>
        <input asp-for="CompanyName" class="form-control" placeholder="Име на компания...">
    </div>

    <!--  HERE I WILL CHANGE IT WITH FOREACH -->

    <div class="col-12">
        <label asp-for="EventType" class="form-label">Вид събитие</label>
        <select asp-for="EventType" class="form-select">
            <option>Събитие в чужбина - Каско регрес на Евроинс</option>
            <option>Събитие в България - Каско регрес на Евроинс</option>
            <option>Събитие в България - Каско регрес на Български застраховател</option>
            <option>Събитие в чужбина - Каско регрес на Български застраховател</option>
            <option>ПТП в България - Каско регрес на чужд застраховател</option>
            <option>ПТП в чужбина – Каско регрес на чужд застраховател</option>
        </select>
    </div>
    <div class="col-3">
        <label asp-for="EventDate" class="form-label">Дата на събитие</label>
        <input asp-for="EventDate" class="form-control" placeholder="въведи дата...">
    </div>
    <div>
    </div>
    <div class="col-3">
        <label asp-for="RegistrationDate" class="form-label">Дата на регистрация</label>
        <input asp-for="RegistrationDate" class="form-control" placeholder="въведи дата...">
    </div>
    <div>
    </div>
    <div class="col-3">
        <label asp-for="BulgarianRegNumber" class="form-label">Български регистрационен номер</label>
        <input asp-for="BulgarianRegNumber" class="form-control" placeholder="номер....">
    </div>
    <div class="col-3">
        <label asp-for="ForeignRegNumber" class="form-label">Чужд регистрационен номер</label>
        <input asp-for="ForeignRegNumber" class="form-control" placeholder="номер....">
    </div>
    <div class="col-3">
        <label asp-for="Property" class="form-label">Имущество</label>
        <input asp-for="Property" class="form-control" placeholder="имущество...">
    </div>

    <!--  HERE I WILL CHANGE IT WITH FOREACH -->

    <div class="col-3">
        <label asp-for="InjuredPerson" class="form-label">Пострадал</label>
        <select asp-for="InjuredPerson" class="form-select">
            <option>Водач</option>
            <option>Пътник</option>
            <option>Мотоциклетист</option>
            <option>Велосипедист</option>
            <option>Пешеходец</option>
        </select>
    </div>
    <div class="col-3">
        <label asp-for="NotifiedBy" class="form-label">Уведомяване от</label>
        <input asp-for="NotifiedBy" class="form-control" placeholder="Уведомяване от име...">
    </div>
    <div>
    </div>
    <div class="col-3">
        <input class="btn btn-primary" type="submit" value="Регистрация" />
        <button class="btn btn-secondary" type="reset">Отказ</button>
    </div>
</form>