        <label asp-for="EndDate" class="form-label">To  <b>event date</b></label>
        <input asp-for="EndDate" type="date" class="form-control" placeholder="">
    </div>
    <div>
        <input asp-controller="References" asp-action="GenerateByPretentionNumber" class="btn btn-primary" type="submit" value="Generate reference" />
    </div>
</form>